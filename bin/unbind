#!/bin/bash

set -e

bin=$(dirname $0)

instance_id=`cat $bin/instance_id`
binding_id=`cat $bin/binding_id`

curl "http://localhost:8001/v2/service_instances/$instance_id/service_bindings/$binding_id?service_id=2e2fc314-37b6-4587-8127-8f9ee8b33fea&plan_id=2" -u $authUsername:$authPassword -X DELETE -H "X-Broker-API-Version: 2.7" -v
